
{
  "manifest_version": 3,
  "name": "Tune Crate",
  "version": "1.0",
  "description": "A crate of your favorite tracks",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "./extension/popup.html",
    "default_title": "Dark Music Player"
  },
  "background": {
    "service_worker": "./extension/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
